{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "paths": {
    "@datatest/*": ["./src/*"],
    "test/*": ["./tests/*"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
